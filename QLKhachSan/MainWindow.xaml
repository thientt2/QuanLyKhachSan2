<Window x:Class="QLKhachSan.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QLKhachSan"
        mc:Ignorable="d"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:Chart="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        
        xmlns:uc="clr-namespace:QLKhachSan.UserControlKS"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}"
        DataContext="{StaticResource MainVM}"

        ResizeMode="NoResize"
        WindowStyle="None"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        Name="mainWindow"    
        Height="830" Width="1540" >
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadedWindowCommand}" CommandParameter="{Binding ElementName=mainWindow}"/>
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <uc:ControlBarUC x:Name="ucControlBar" HeaderText="La Opera - Hotel Management System" />
        </Grid>

        <Grid Grid.Row="1">
            <Grid>
                <TabControl
                    materialDesign:ColorZoneAssist.Background="Black"
                    materialDesign:ColorZoneAssist.Foreground="White"
                    materialDesign:ColorZoneAssist.Mode="Custom"
                    Style="{StaticResource MaterialDesignFilledTabControl}"
                    TabStripPlacement="Left">
 
                    <!--TrangChu-->
                    <TabItem  Width="240" Height="70" Margin="0,130,0,10"  DataContext="{StaticResource TrangChuVM}">
                        <TabItem.Header>
                            <StackPanel Orientation="Horizontal" Width="190">
                                <materialDesign:PackIcon Kind="House" Foreground="White" VerticalAlignment="Center" Margin="0,0,30,0" Height="40" Width="50" />
                                <TextBlock Margin="5,10,30,10" Text="Trang Chủ" Foreground="White" FontSize="18" VerticalAlignment="Bottom" />
                            </StackPanel>
                        </TabItem.Header>

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>

                            <Grid Grid.Row="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                                    <ColumnDefinition></ColumnDefinition>
                                </Grid.ColumnDefinitions>

                                <Grid Grid.Column="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition Width="auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid Grid.Column="0" Width="50" Margin="20">
                                        <Image Source="/Images/LightGreen.png" Stretch="UniformToFill"/>
                                    </Grid>
                                    <Grid Grid.Column="1">
                                        <TextBlock Text="Trống" FontSize="15"  Width="70" VerticalAlignment="Center" ></TextBlock>
                                    </Grid>
                                </Grid>

                                <Grid Grid.Column="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition Width="auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid Grid.Column="0" Width="50" Margin="20">
                                        <Image Source="/Images/Red.png" Stretch="UniformToFill"/>
                                    </Grid>
                                    <Grid Grid.Column="1">
                                        <TextBlock Text="Đang sử dụng" FontSize="15"  Width="100" VerticalAlignment="Center" ></TextBlock>
                                    </Grid>
                                </Grid>

                                <Grid Grid.Column="2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition Width="auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid Grid.Column="0" Width="50" Margin="20">
                                        <Image Source="/Images/Yellow.jpg" Stretch="UniformToFill"/>
                                    </Grid>
                                    <Grid Grid.Column="1">
                                        <TextBlock Text="Đã đặt" FontSize="15"  Width="100" VerticalAlignment="Center" ></TextBlock>
                                    </Grid>
                                </Grid>

                                <Grid Grid.Column="3">
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                        <Button
                                            x:Name="SortAll"
                                             Command="{Binding SortAllCommand}" CommandParameter="{Binding ElementName=SortAll}"
                                             Background="LightGray"
                                             Foreground="Black"
                                             Margin="20"
                                             Style="{StaticResource MaterialDesignRaisedDarkButton}"
                                             Width="80"
                                             Height="40"
                                             Content="_Tất cả">
                                        </Button>

                                        <Button
                                            x:Name="SortEmpty"
                                             Command="{Binding SortEmptyCommand}" CommandParameter="{Binding ElementName=SortEmpty}"
                                             Background="LightGray"
                                             Foreground="Black"
                                             Margin="20"
                                             Style="{StaticResource MaterialDesignRaisedDarkButton}"
                                             Width="120"
                                             Height="40"
                                             Content="_Phòng trống">
                                        </Button>

                                        <Button
                                            x:Name="SortUsing"
                                             Command="{Binding SortUsingCommand}" CommandParameter="{Binding ElementName=SortUsing}"
                                             Background="LightGray"
                                             Foreground="Black"
                                             Margin="20"
                                             Style="{StaticResource MaterialDesignRaisedDarkButton}"
                                             Width="170"
                                             Height="40"
                                             Content="_Phòng đang sử dụng">
                                        </Button>

                                        <Button
                                            x:Name="SortBooked"
                                             Command="{Binding SortBookedCommand}" CommandParameter="{Binding ElementName=SortBooked}"
                                             Background="LightGray"
                                             Foreground="Black"
                                             Margin="20, 20, 60, 20"
                                             Style="{StaticResource MaterialDesignRaisedDarkButton}"
                                             Width="170"
                                             Height="40"
                                             Content="_Phòng đã được đặt">
                                        </Button>
                                    </StackPanel>
                                </Grid>
                            </Grid>
                            <Grid Grid.Row="1">
                                <Separator Margin="30,0,30,0" ></Separator>
                            </Grid>


                            <Grid Grid.Row="2">
                                <ScrollViewer>
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="auto"></RowDefinition>
                                            <RowDefinition Height="auto"></RowDefinition>
                                            <RowDefinition Height="auto"></RowDefinition>
                                            <RowDefinition Height="auto"></RowDefinition>
                                            <RowDefinition Height="auto"></RowDefinition>
                                            <RowDefinition Height="auto"></RowDefinition>
                                            <RowDefinition Height="auto"></RowDefinition>
                                            <RowDefinition></RowDefinition>
                                        </Grid.RowDefinitions>

                                        <Expander Header="1F" Grid.Row="0" IsExpanded="True">
                                            <ItemsControl ItemsSource="{Binding MyStackPanel1}">
                                                <ItemsControl.ItemsPanel>
                                                    <ItemsPanelTemplate>
                                                        <WrapPanel Orientation="Horizontal"  />
                                                    </ItemsPanelTemplate>
                                                </ItemsControl.ItemsPanel>
                                            </ItemsControl>
                                        </Expander>

                                        <Expander Header="2F" Grid.Row="1" IsExpanded="True">
                                            <ItemsControl ItemsSource="{Binding MyStackPanel2}">
                                                <ItemsControl.ItemsPanel>
                                                    <ItemsPanelTemplate>
                                                        <WrapPanel Orientation="Horizontal" />
                                                    </ItemsPanelTemplate>
                                                </ItemsControl.ItemsPanel>
                                            </ItemsControl>
                                        </Expander>

                                        <Expander Header="3F" Grid.Row="2" IsExpanded="True">
                                            <ItemsControl ItemsSource="{Binding MyStackPanel3}">
                                                <ItemsControl.ItemsPanel>
                                                    <ItemsPanelTemplate>
                                                        <WrapPanel Orientation="Horizontal" />
                                                    </ItemsPanelTemplate>
                                                </ItemsControl.ItemsPanel>
                                            </ItemsControl>
                                        </Expander>

                                        <Expander Header="4F" Grid.Row="3" IsExpanded="True">
                                            <ItemsControl ItemsSource="{Binding MyStackPanel4}">
                                                <ItemsControl.ItemsPanel>
                                                    <ItemsPanelTemplate>
                                                        <WrapPanel Orientation="Horizontal" />
                                                    </ItemsPanelTemplate>
                                                </ItemsControl.ItemsPanel>
                                            </ItemsControl>
                                        </Expander>

                                        <Expander Header="5F" Grid.Row="4" IsExpanded="True">
                                            <ItemsControl ItemsSource="{Binding MyStackPanel5}">
                                                <ItemsControl.ItemsPanel>
                                                    <ItemsPanelTemplate>
                                                        <WrapPanel Orientation="Horizontal" />
                                                    </ItemsPanelTemplate>
                                                </ItemsControl.ItemsPanel>
                                            </ItemsControl>
                                        </Expander>

                                        <Expander Header="6F" Grid.Row="5" IsExpanded="True">
                                            <ItemsControl ItemsSource="{Binding MyStackPanel6}">
                                                <ItemsControl.ItemsPanel>
                                                    <ItemsPanelTemplate>
                                                        <WrapPanel Orientation="Horizontal" />
                                                    </ItemsPanelTemplate>
                                                </ItemsControl.ItemsPanel>
                                            </ItemsControl>
                                        </Expander>

                                        <Expander Header="7F" Grid.Row="6" IsExpanded="True">
                                            <ItemsControl ItemsSource="{Binding MyStackPanel7}">
                                                <ItemsControl.ItemsPanel>
                                                    <ItemsPanelTemplate>
                                                        <WrapPanel Orientation="Horizontal" />
                                                    </ItemsPanelTemplate>
                                                </ItemsControl.ItemsPanel>
                                            </ItemsControl>
                                        </Expander>
                                    </Grid>
                                </ScrollViewer>
                            </Grid>
                        </Grid>

                    </TabItem>
                    <!--KhachHang-->
                    <TabItem Height="70" Margin="0,-110,0,10" DataContext="{StaticResource KhachHangVM}">

                        <TabItem.Header>
                            <StackPanel Orientation="Horizontal" Width="190">
                                <materialDesign:PackIcon Kind="Account" Foreground="White" Margin="0,0,30,0"  Height="40" Width="50" VerticalAlignment="Center"/>
                                <TextBlock Margin="5,10,30,10" Text="Khách Hàng" Foreground="White" FontSize="18" VerticalAlignment="Bottom" />
                            </StackPanel>
                        </TabItem.Header>
                        <Grid >
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"></RowDefinition>
                                <RowDefinition ></RowDefinition>
                                <RowDefinition Height="Auto"></RowDefinition>
                            </Grid.RowDefinitions>

                            <materialDesign:Card Grid.Row="0" Margin="30,20,30,0">
                                <WrapPanel>
                                    <!--<TextBox x:Name="txtMAKH"  Text="{Binding MAKH,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}" Margin="40,10,30,10" FontSize="15" VerticalAlignment="Center" materialDesign:HintAssist.Hint="Mã khách hàng" Style="{StaticResource MaterialDesignFloatingHintTextBox}" />-->
                                    <TextBox x:Name="txtTENKH" Text="{Binding TENKH,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}" Foreground="Black" Margin="40,10,30,10" FontSize="15" VerticalAlignment="Center" materialDesign:HintAssist.Hint="Tên khách hàng" Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
                                    <TextBox x:Name="txtGIOITINHKH" Text="{Binding GIOITINH,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}" Foreground="Black" Margin="40,10,30,10" FontSize="15" VerticalAlignment="Center" materialDesign:HintAssist.Hint="Giới tính" Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
                                    <TextBox x:Name="txtDIACHIKH" Text="{Binding DIACHI,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}" Foreground="Black" Margin="40,10,30,10" FontSize="15" VerticalAlignment="Center" materialDesign:HintAssist.Hint="Địa chỉ" Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
                                    <TextBox x:Name="txtSDTKH" Text="{Binding SDT,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}" Foreground="Black" Margin="40,10,30,10" FontSize="15" VerticalAlignment="Center" materialDesign:HintAssist.Hint="SĐT" Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
                                    <TextBox x:Name="txtEMAILKH" Text="{Binding EMAIL,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}" Foreground="Black" Margin="40,10,30,10" FontSize="15" VerticalAlignment="Center" materialDesign:HintAssist.Hint="Email" Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
                                    <TextBox x:Name="txtSOCCCD" Text="{Binding SOCCCD,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}" Foreground="Black" Margin="40,10,30,10" FontSize="15" VerticalAlignment="Center" materialDesign:HintAssist.Hint="CCCD" Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
                                    <TextBox x:Name="txtQUOCTICH" Text="{Binding QUOCTICH,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}" Foreground="Black" Margin="40,10,30,10" FontSize="15" VerticalAlignment="Center" materialDesign:HintAssist.Hint="Quốc tịch" Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
                                    <DatePicker x:Name="txtNGSINHKH"  SelectedDate="{Binding NGSINH,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay, StringFormat=dd/MM/yyyy }" Foreground="Black" Margin="40,10,30,10" FontSize="15" VerticalAlignment="Center" materialDesign:HintAssist.Hint="Ngày sinh" materialDesign:TextFieldAssist.HasClearButton="True" Style="{StaticResource MaterialDesignFloatingHintDatePicker}" />
                                </WrapPanel>
                            </materialDesign:Card>

                            <materialDesign:Card Grid.Row="1" Margin="30,30,30,0">
                                <ScrollViewer VerticalScrollBarVisibility="auto" HorizontalScrollBarVisibility="auto">
                                    <ListView ItemsSource="{Binding ListKH, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" SelectedItem="{Binding SelectedItem, Mode=TwoWay}">
                                        <ListView.View>
                                            <GridView>
                                                <GridView.ColumnHeaderContainerStyle>
                                                    <Style>
                                                        <Setter Property="Control.Padding" Value="10"  />
                                                    </Style>
                                                </GridView.ColumnHeaderContainerStyle>
                                                <GridViewColumn Header="Mã khách hàng" Width="Auto" DisplayMemberBinding="{Binding MAKH}"></GridViewColumn>
                                                <GridViewColumn Header="Tên khách hàng" Width="Auto" DisplayMemberBinding="{Binding TENKH}"></GridViewColumn>
                                                <GridViewColumn Header="Giới tính" Width="Auto" DisplayMemberBinding="{Binding GIOITINH}"></GridViewColumn>
                                                <GridViewColumn Header="Ngày sinh" Width="Auto" DisplayMemberBinding="{Binding NGSINH, StringFormat=dd/MM/yyyy}"></GridViewColumn>
                                                <GridViewColumn Header="Địa chỉ" Width="Auto" DisplayMemberBinding="{Binding DIACHI}"></GridViewColumn>
                                                <GridViewColumn Header="SDT" Width="Auto" DisplayMemberBinding="{Binding SDT}"></GridViewColumn>
                                                <GridViewColumn Header="Email" Width="Auto" DisplayMemberBinding="{Binding EMAIL}"></GridViewColumn>
                                                <GridViewColumn Header="CCCD" Width="Auto" DisplayMemberBinding="{Binding SOCCCD}"></GridViewColumn>
                                                <GridViewColumn Header="Quốc tịch" DisplayMemberBinding="{Binding QUOCTICH}"></GridViewColumn>
                                            </GridView>
                                        </ListView.View>
                                    </ListView>
                                </ScrollViewer>
                            </materialDesign:Card>

                            <Grid Grid.Row="2" Margin="0,10,0,15">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                    <TextBlock Margin="30, 40, 0, 30" FontSize="25"><Run Text="Chế độ tìm kiếm: "/> 
                                    </TextBlock>
                                    <ToggleButton
                                        Width ="60"
                                        Margin="10, 40, 300, 30"                 
                                        Style="{StaticResource MaterialDesignSwitchSecondaryToggleButton}"
                                        ToolTip="Chế độ tìm kiếm"
                                        Command="{Binding ToggleSearchCommand}"/>
                                    <Button
                                        Command="{Binding AddCommand}"
                                        Background="Green"
                                        Foreground="Black"
                                        Margin="30"
                                        Style="{StaticResource MaterialDesignRaisedDarkButton}"
                                        Width="100"
                                        Height="40"
                                        Content="_Thêm">
                                    </Button>

                                    <Button
                                        Command="{Binding EditCommand}"
                                        Background="Yellow"
                                        Foreground="Black"
                                        Margin="30"
                                        Style="{StaticResource MaterialDesignRaisedDarkButton}"
                                        Width="100"
                                        Height="40"
                                        Content="_Chỉnh sửa">

                                    </Button>

                                    <Button
                                        Command="{Binding CancelCommand}"
                                        Background="LightCoral"
                                        Foreground="Black"
                                        Margin="30"
                                        Style="{StaticResource MaterialDesignRaisedDarkButton}"
                                        Width="100"
                                        Height="40"
                                        Content="_Hủy">
                                    </Button>

                                    <Button
                                        Command="{Binding DeleteCommand}"
                                        Background="Red"
                                        Foreground="Black"
                                        Margin="30"
                                        Style="{StaticResource MaterialDesignRaisedDarkButton}"
                                        Width="100"
                                        Height="40"
                                        Content="_Xóa">
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </Grid>
                    </TabItem>
                    
                    <!--NhanVien-->
                    <TabItem Height="70" Margin="0,-340,0,10" DataContext="{StaticResource NhanVienVM}">
                        <TabItem.Header>
                            <StackPanel Orientation="Horizontal" Width="190">
                                <materialDesign:PackIcon Kind="AccountBox" Foreground="White" Margin="0,0,30,0"  Height="40" Width="50" VerticalAlignment="Center"/>
                                <TextBlock Margin="5,10,30,10" Text="Nhân Viên" Foreground="White" FontSize="18" VerticalAlignment="Bottom" />
                            </StackPanel>
                        </TabItem.Header>

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"></RowDefinition>
                                <RowDefinition ></RowDefinition>
                                <RowDefinition Height="Auto"></RowDefinition>
                            </Grid.RowDefinitions>

                            <materialDesign:Card Grid.Row="0" Margin="30,20,30,0">
                                <WrapPanel>
                                    <WrapPanel.Style>
                                        <Style TargetType="WrapPanel">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding DataContext.IDPHANQUYEN, ElementName=mainWindow}" Value="2">
                                                    <Setter Property="Visibility" Value="Collapsed" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </WrapPanel.Style> 
                                    <!--<TextBox x:Name="txtMANV" Text="{Binding MANV,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}" Margin="20,10,30,10" FontSize="15" VerticalAlignment="Center" materialDesign:HintAssist.Hint="Mã nhân viên" Style="{StaticResource MaterialDesignFloatingHintTextBox}" />-->
                                    <TextBox x:Name="txtTENNV" Text="{Binding TENNV,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}" Foreground="Black" Margin="20,10,30,10" FontSize="15" VerticalAlignment="Center" materialDesign:HintAssist.Hint="Tên nhân viên" Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
                                    <TextBox x:Name="txtGIOITINHNV" Text="{Binding GIOITINH,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}" Foreground="Black" Margin="20,10,30,10" FontSize="15" VerticalAlignment="Center" materialDesign:HintAssist.Hint="Giới tính" Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
                                    <TextBox x:Name="txtDIACHINV" Text="{Binding DIACHI,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}" Foreground="Black" Margin="20,10,30,10" FontSize="15" VerticalAlignment="Center" materialDesign:HintAssist.Hint="Địa chỉ" Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
                                    <TextBox x:Name="txtSDTNV" Text="{Binding SDT,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}" Foreground="Black" Margin="20,10,30,10" FontSize="15" VerticalAlignment="Center" materialDesign:HintAssist.Hint="SĐT" Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
                                    <TextBox x:Name="txtEMAILNV" Text="{Binding EMAIL,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}" Foreground="Black" Margin="20,10,30,10" FontSize="15" VerticalAlignment="Center" materialDesign:HintAssist.Hint="Email" Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
                                    <TextBox x:Name="txtVITRILAMVIECNV" Text="{Binding VITRILAMVIEC,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}" Foreground="Black" Margin="20,10,30,10" FontSize="15" VerticalAlignment="Center" materialDesign:HintAssist.Hint="Vị trí làm việc" Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
                                    <TextBox x:Name="txtLUONGNV" Text="{Binding LUONG,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}" Foreground="Black" Margin="20,10,30,10" FontSize="15" VerticalAlignment="Center" materialDesign:HintAssist.Hint="Lương" Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
                                    <DatePicker x:Name="txtNGVLNV" SelectedDate="{Binding NGVL,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}" Foreground="Black" Margin="20,10,30,10" FontSize="15" VerticalAlignment="Center" materialDesign:HintAssist.Hint="Ngày vào làm" materialDesign:TextFieldAssist.HasClearButton="True" Style="{StaticResource MaterialDesignFloatingHintDatePicker}" />
                                    <DatePicker x:Name="txtNGSINHNV" SelectedDate="{Binding NGSINH,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}" Foreground="Black" Margin="20,10,30,10" FontSize="15" VerticalAlignment="Center" materialDesign:HintAssist.Hint="Ngày sinh" materialDesign:TextFieldAssist.HasClearButton="True" Style="{StaticResource MaterialDesignFloatingHintDatePicker}" />
                                </WrapPanel>
                            </materialDesign:Card>

                            <materialDesign:Card Grid.Row="1" Margin="30,30,30,0">
                                <ScrollViewer VerticalScrollBarVisibility="auto" HorizontalScrollBarVisibility="auto">
                                    <ListView ItemsSource="{Binding ListNV,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" SelectedItem="{Binding SelectedItem, Mode=TwoWay}">
                                        <ListView.View>
                                            <GridView>
                                                <GridView.ColumnHeaderContainerStyle>
                                                    <Style>
                                                        <Setter Property="Control.Padding" Value="10" />
                                                    </Style>
                                                </GridView.ColumnHeaderContainerStyle>
                                                <GridViewColumn Header="Mã nhân viên" Width="Auto" DisplayMemberBinding="{Binding MANV}"></GridViewColumn>
                                                <GridViewColumn Header="Tên nhân viên" Width="Auto" DisplayMemberBinding="{Binding TENNV}"></GridViewColumn>
                                                <GridViewColumn Header="Giới tính" Width="Auto" DisplayMemberBinding="{Binding GIOITINH}"></GridViewColumn>
                                                <GridViewColumn Header="Ngày sinh" Width="Auto" DisplayMemberBinding="{Binding NGSINH, StringFormat=dd/MM/yyyy}"></GridViewColumn>
                                                <GridViewColumn Header="Địa chỉ" Width="Auto" DisplayMemberBinding="{Binding DIACHI}"></GridViewColumn>
                                                <GridViewColumn Header="SDT" Width="Auto" DisplayMemberBinding="{Binding SDT}"></GridViewColumn>
                                                <GridViewColumn Header="Email" Width="Auto" DisplayMemberBinding="{Binding EMAIL}"></GridViewColumn>
                                                <GridViewColumn Header="Vị trí làm việc" Width="Auto" DisplayMemberBinding="{Binding VITRILAMVIEC}"></GridViewColumn>
                                                <GridViewColumn Header="Lương" DisplayMemberBinding="{Binding LUONG, StringFormat={}{0:N0} VND}"></GridViewColumn>
                                                <GridViewColumn Header="Ngày vào làm" DisplayMemberBinding="{Binding NGVL, StringFormat=dd/MM/yyyy}"></GridViewColumn>
                                            </GridView>
                                        </ListView.View>
                                    </ListView>
                                </ScrollViewer>
                            </materialDesign:Card>

                            <Grid Grid.Row="2" Margin="0,10,0,15">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                    <StackPanel.Style>
                                        <Style TargetType="StackPanel">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding DataContext.IDPHANQUYEN, ElementName=mainWindow}" Value="2">
                                                    <Setter Property="Visibility" Value="Collapsed" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </StackPanel.Style>
                                    <TextBlock Margin="30, 40, 0, 30" FontSize="25"><Run Text="Chế độ tìm kiếm: "/>
                                    </TextBlock>
                                    <ToggleButton
                                        Width ="60"
                                        Margin="10, 40, 300, 30"                 
                                        Style="{StaticResource MaterialDesignSwitchSecondaryToggleButton}"
                                        Command="{Binding ToggleSearchCommand}"/>

                                    <Button
                                        Command="{Binding AddCommand}"
                                        Background="Green"
                                        Foreground="Black"
                                        Margin="30"
                                        Width="100"
                                        Height="40"
                                        Content="_Thêm">
                                    </Button>

                                    <Button
                                        Command="{Binding EditCommand}"
                                        Background="Yellow"
                                        Foreground="Black"
                                        Margin="30"
                                        Width="100"
                                        Height="40"
                                        Content="_Chỉnh sửa">
                                    </Button>

                                    <Button
                                        Command="{Binding CancelCommand}"
                                        Background="LightCoral"
                                        Foreground="Black"
                                        Margin="30"
                                        Width="100"
                                        Height="40"
                                        Content="_Hủy" >
                                    </Button>

                                    <Button
                                        Command="{Binding DeleteCommand}"
                                        Background="Red"
                                        Foreground="Black"
                                        Margin="30"
                                        Width="100"
                                        Height="40"
                                        Content="_Xóa">
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </Grid>
                    </TabItem>

                    <!--Dịch vụ-->
                    <TabItem Height="70" Margin="0,-560,0,10" DataContext="{StaticResource DichVuVM}">
                        <TabItem.Header>
                            <StackPanel Orientation="Horizontal" Width="190">
                                <materialDesign:PackIcon Kind="RoomService" Foreground="White" Margin="0,0,30,0"  Height="40" Width="50" VerticalAlignment="Center"/>
                                <TextBlock Margin="5,10,30,10" Text="Dịch Vụ" Foreground="White" FontSize="18" VerticalAlignment="Bottom" />
                            </StackPanel>
                        </TabItem.Header>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition></ColumnDefinition>
                                <ColumnDefinition></ColumnDefinition>
                            </Grid.ColumnDefinitions>

                            <Grid Grid.Column="0">
                                <materialDesign:Card Margin="30,20,30,30">
                                    <ScrollViewer VerticalScrollBarVisibility="auto" HorizontalScrollBarVisibility="auto">
                                        <ListView ItemsSource="{Binding ListCTPDV,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" SelectedItem="{Binding SelectedItem, Mode=TwoWay}">
                                            <ListView.View>
                                                <GridView>
                                                    <GridView.ColumnHeaderContainerStyle>
                                                        <Style>
                                                            <Setter Property="Control.Padding" Value="10" />
                                                        </Style>
                                                    </GridView.ColumnHeaderContainerStyle>
                                                    <GridViewColumn Header="Mã phiếu dịch vụ" Width="Auto" DisplayMemberBinding="{Binding MAPDV}"></GridViewColumn>
