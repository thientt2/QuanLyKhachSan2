                                            <Run Text="Standard: " ></Run>
                                            <Run Text="{Binding DoanhThuS, StringFormat={}{0:N0},UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}" ></Run>   
                                        </TextBlock>
                                    </StackPanel>
                                </Grid>
                                <Grid Grid.Column="1">
                                    <StackPanel Margin="20,0,0,0" HorizontalAlignment="Left" Orientation="Horizontal">
                                        <TextBlock Margin="10,10,0,0" Foreground="Black" HorizontalAlignment="Center" FontSize="22">
                                            <Run Text="Deluxe: " ></Run>
                                            <Run Text="{Binding DoanhThuD, StringFormat={}{0:N0},UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}" ></Run>
                                        </TextBlock>
                                    </StackPanel>
                                </Grid>
                                <Grid Grid.Column="2">
                                    <StackPanel Margin="-20,0,0,0" HorizontalAlignment="Left" Orientation="Horizontal">
                                        <TextBlock Margin="10,10,0,0" Foreground="Black" HorizontalAlignment="Center" FontSize="22">
                                            <Run Text="Doanh thu phòng: " ></Run>
                                            <Run Text="{Binding DoanhThuPhong,StringFormat={}{0:N0},UpdateSourceTrigger =PropertyChanged,Mode=TwoWay}" ></Run>
                                        </TextBlock>
                                    </StackPanel>
                                </Grid>
                            </Grid>

                            <Grid Grid.Row="4" >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="330"></ColumnDefinition>
                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <Grid Grid.Column="0">
                                    <StackPanel Margin="80,0,0,0" HorizontalAlignment="Left" Orientation="Horizontal">
                                        <TextBlock Margin="10,10,0,0" Foreground="Black" HorizontalAlignment="Center" FontSize="22">
                                            <Run Text="Premium: " ></Run>
                                            <Run Text="{Binding DoanhThuP, StringFormat={}{0:N0},UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}" ></Run>
                                        </TextBlock>
                                    </StackPanel>
                                </Grid>
                                <Grid Grid.Column="1">
                                    <StackPanel Margin="20,0,0,0" HorizontalAlignment="Left" Orientation="Horizontal">
                                        <TextBlock Margin="10,10,0,0" Foreground="Black" HorizontalAlignment="Center" FontSize="22">
                                            <Run Text="La Opera: " ></Run>
                                            <Run Text="{Binding DoanhThuLA, StringFormat={}{0:N0}, UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}" ></Run>
                                        </TextBlock>
                                    </StackPanel>
                                </Grid>
                                <Grid Grid.Column="2">
                                    <StackPanel Margin="-20,0,0,0" HorizontalAlignment="Left" Orientation="Horizontal">
                                        <TextBlock Margin="10,10,0,0" Foreground="Black" HorizontalAlignment="Center" FontSize="22">
                                            <Run Text="Doanh thu dịch vụ: " ></Run>
                                            <Run Text="{Binding DoanhThuDV, StringFormat={}{0:N0}, UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}" ></Run>
                                        </TextBlock>
                                    </StackPanel>
                                </Grid>
                            </Grid>
                        </Grid>
                    </TabItem>
                </TabControl>
            </Grid>

            <materialDesign:DrawerHost
                x:Name="DrawerHost"
                Panel.ZIndex="1"
                Grid.Row="0"
                Grid.RowSpan="2"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                BorderBrush="{DynamicResource MaterialDesignDivider}"
                BorderThickness="1"
                BottomDrawerBackground="{DynamicResource SecondaryHueLightBrush}"
                BottomDrawerCornerRadius="20 20 0 0">

                <materialDesign:DrawerHost.Style>
                    <Style TargetType="materialDesign:DrawerHost" BasedOn="{StaticResource {x:Type materialDesign:DrawerHost}}">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsChecked, ElementName=BackgroundToggle}" Value="True">
                                <Setter Property="OverlayBackground" Value="{DynamicResource PrimaryHueMidBrush}" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </materialDesign:DrawerHost.Style>

                <materialDesign:DrawerHost.LeftDrawerContent>
                    <Grid Width="510">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition></RowDefinition>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0">
                            <Border Margin="0,30,0,20" Width="200" Height="200" HorizontalAlignment="Center" VerticalAlignment="Top">
                                <Image Source="{Binding ImagePath,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}" Stretch="Fill">
                                    <Image.Clip>
                                        <EllipseGeometry Center="100,100" RadiusX="100" RadiusY="100"/>
                                    </Image.Clip>
                                </Image>
                            </Border>

                            <Button Style="{StaticResource MaterialDesignFloatingActionMiniLightButton}" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="110,0,0,15" Command="{Binding ChangeImagePathCommand}">
                                <materialDesign:PackIcon Kind="PlusThick"/>
                            </Button>
                        </Grid>

                        <Grid Grid.Row="1">
                            <TextBlock Text="{Binding MANV,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}" Margin="0,0,0,10" HorizontalAlignment="Center" FontSize="30"></TextBlock>
                        </Grid>

                        <Grid Grid.Row="2">
                            <TextBlock Text="{Binding VITRILAMVIEC,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}" Margin="0,0,0,20" HorizontalAlignment="Center" FontSize="20"></TextBlock>
                        </Grid>

                        <Grid Grid.Row="3">
                            <Separator Margin="40,0,40,0"></Separator>
                        </Grid>

                        <Grid Grid.Row="4">
                            <StackPanel Margin="70,20,0,0" HorizontalAlignment="Left" Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Account" Height="20"/>
                                <TextBlock Margin="10,0,0,0" HorizontalAlignment="Center" FontSize="20">
                                    <Run  Text="Họ và tên:  "></Run>
                                    <Run  Text="{Binding TENNV,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}"></Run>
                                </TextBlock>
                            </StackPanel>
                        </Grid>

                        <Grid Grid.Row="5">
                            <StackPanel Margin="70,20,0,0" HorizontalAlignment="Left" Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="HumanMaleFemale" Height="20"/>
                                <TextBlock Margin="10,0,0,0" HorizontalAlignment="Center" FontSize="20">
                                    <Run Text="Giới tính:    " ></Run>
                                    <Run Text="{Binding GIOITINH,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}" ></Run>
                                </TextBlock>
                            </StackPanel>
                        </Grid>

                        <Grid Grid.Row="6">
                            <StackPanel Margin="70,20,0,0" HorizontalAlignment="Left" Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Phone" Height="20"/>
                                <TextBlock Margin="10,0,0,0" HorizontalAlignment="Center" FontSize="20">
                                    <Run Text="SĐT:           " ></Run>
                                    <Run Text="{Binding SDT,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}" ></Run>
                                </TextBlock>
                            </StackPanel>
                        </Grid>

                        <Grid Grid.Row="7">
                            <StackPanel Margin="70,20,0,0" HorizontalAlignment="Left" Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Email" Height="20"/>
                                <TextBlock Margin="10,0,0,0" HorizontalAlignment="Center" FontSize="20">
                                    <Run Text="Email:         "></Run>
                                    <Run Text="{Binding EMAIL,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}"></Run>
                                </TextBlock>
                            </StackPanel>
                        </Grid>

                        <Grid Grid.Row="9">
                            <Separator Margin="40,20,40,0"></Separator>
                        </Grid>

                        <Grid Grid.Row="8">
                            <StackPanel Margin="70,20,0,0" HorizontalAlignment="Left" Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="CalendarToday" Height="20"/>
                                <TextBlock Margin="10,0,0,0" HorizontalAlignment="Center" FontSize="20">
                                    <Run Text="Ngày sinh: "></Run>
                                    <Run Text="{Binding NGSINH, StringFormat={}{0:dd/MM/yyyy}, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                                </TextBlock>
                            </StackPanel>
                        </Grid>

                        <Grid Grid.Row="10">
                            <StackPanel Margin="70,20,0,0" HorizontalAlignment="Left" Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Domain" Height="20"/>
                                <TextBlock Text="Khách sạn La Opera Hotel" Margin="10,0,0,0" HorizontalAlignment="Center" FontSize="20"></TextBlock>
                            </StackPanel>
                        </Grid>

                        <Grid Grid.Row="11">
                            <StackPanel Margin="70,20,0,0" HorizontalAlignment="Left" Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Clock" Height="20"/>
                                <TextBlock x:Name="txtClock" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20">
                                    <Run Text=" "></Run>
                                    <Run Text="{Binding CurrentTime, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                                </TextBlock>
                            </StackPanel>
                        </Grid>

                        <Grid Grid.Row="12">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">

                                <Button
                                    x:Name="ChangePW"
                                    Command="{Binding ChangePWCommand}" CommandParameter="{Binding ElementName=ChangePW}"
                                    Background="LightGray"
                                    Foreground="Black"
                                    Margin="40,0,0,30"
                                    Style="{StaticResource MaterialDesignRaisedDarkButton}"
                                    Width="120"
                                    Height="40"
                                    ToolTip="Resource name: MaterialDesignRaisedLightDarkButton"
                                    Content="_Đổi mật khẩu">            
                                </Button>

                                <Button
                                    x:Name="LogOut"
                                    Command="{Binding LogOutCommand}" CommandParameter="{Binding ElementName=LogOut}"
                                    Background="LightGray"
                                    Foreground="Black"
                                    Margin="40,0,40,30"
                                    Style="{StaticResource MaterialDesignRaisedDarkButton}"
                                    Width="120"
                                    Height="40"
                                    ToolTip="Resource name: MaterialDesignRaisedLightDarkButton"
                                    Content="_Đăng xuất">
                                </Button>
                            </StackPanel>
                        </Grid>

                        <Button
                            Panel.ZIndex="2"
                            VerticalAlignment="Top"
                            HorizontalAlignment="Right"
                            Command="{x:Static materialDesign:DrawerHost.CloseDrawerCommand}"
                            CommandParameter="{x:Static Dock.Left}"
                            IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                            Style="{StaticResource MaterialDesignIconForegroundButton}">
                            <materialDesign:PackIcon Kind="WindowClose" />
                        </Button>


                    </Grid>


                </materialDesign:DrawerHost.LeftDrawerContent>

                <Button Content="Open Drawer"
                    Command="{x:Static materialDesign:DrawerHost.OpenDrawerCommand}"
                    CommandParameter="{x:Static Dock.Left}"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    BorderBrush="White"
                    BorderThickness="0,2,0,2"
                    Height="103" Width="239"
                    Background="Black"
                    Panel.ZIndex="2">
                    <Button.ContentTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="AccountCircle" Height="50" Width="60"/>
                                <TextBlock Text="Thông Tin"   Foreground="White" FontSize="23"  Width="140" Margin="20,0,0,0" VerticalAlignment="Center" ></TextBlock>
                            </StackPanel>
                        </DataTemplate>
                    </Button.ContentTemplate>
                </Button>
            </materialDesign:DrawerHost>

        </Grid>
        
        <!--Account-->
    </Grid>
</Window>
